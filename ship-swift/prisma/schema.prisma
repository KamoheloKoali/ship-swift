
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Users {
  Id               String           @id @default(uuid())
  email            String           @unique
  phoneNumber      String
  firstName        String
  lastName         String
  photoUrl         String
  idPhotoUrl       String
  dateCreated      DateTime         @default(now()) // Tracks when the user account was created
  dateUpdated      DateTime         @updatedAt // Automatically updates when modified

  // Relations
  courierJobs CourierJobs[]
  userRequests UserRequests[]
  driverRequests DriverRequests[]
}


model Drivers {
  Id               String           @id @default(uuid())
  email            String           @unique
  phoneNumber      String
  firstName        String
  lastName         String
  photoUrl         String
  idPhotoUrl       String
  vehicleType      String
  vehicleDetails   String[]
  dateCreated      DateTime         @default(now()) // Tracks when the user account was created
  dateUpdated      DateTime         @updatedAt // Automatically updates when modified

  // relations
  driveRequests DriverRequests[]
  userRequests UserRequests[]
}

model CourierJobs {
  Id               String           @id @default(uuid())
  Title            String
  Description      String
  Budget           String

  // Foreign Keys and Relations
  user   Users  @relation(fields: [userId], references: [Id])
  userId String // Foreign key for Users
}

model DriverRequests {
  Id            String            @id @default(uuid())
  message       String

  // Foreign Keys and Relations
  sender   Drivers  @relation(fields: [senderId], references: [Id])
  senderId String // Foreign key for Driver (driver)

  receiver   Users  @relation(fields: [receiverId], references: [Id])
  receiverId String // Foreign key for Users (user)
}

model UserRequests {
  Id            String            @id @default(uuid())
  message       String

  sender   Users  @relation(fields: [senderId], references: [Id])
  senderId String // Foreign key for Users (user)

  // Foreign Keys and Relations
  receiver   Drivers  @relation(fields: [receiverId], references: [Id])
  receiverId String // Foreign key for Driver (driver)
}